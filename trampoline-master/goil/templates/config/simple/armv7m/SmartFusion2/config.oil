IMPLEMENTATION SmartFusion2 {
  OS {
    BOOLEAN [
      TRUE {
        ENUM [
          gpio,nvm,uart
        ] LIBRARY[];
      },
      FALSE
    ] BUILD = FALSE;
  };
};

CPU SmartFusion2 {
