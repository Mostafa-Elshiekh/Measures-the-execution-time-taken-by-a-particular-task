      PATH = "cortex/armv7m/SmartFusion2/drivers/mss_gpio";
      CHEADER = "mss_gpio.h";
      CFILE = "mss_gpio.c";
    };

    LIBRARY nvm {
      PATH = "cortex/armv7m/SmartFusion2/drivers/mss_nvm";
